{{>header}}
<style>
        .custom-container{
            margin-top: 2em;
            padding-right: 25em;
            padding-left: 25em;
            
        }
 /* Extra small devices (portrait phones, less than 576px) */
@media (max-width: 575.98px) { 
    .custom-container{
            margin-top: 2em;
            padding-right: 1em;
            padding-left: 1em;
           
        } 
        }

/* // Small devices (landscape phones, 576px and up) */
@media (min-width: 576px) and (max-width: 767.98px) { .custom-container{
            margin-top: 2em;
            padding-right: 5em;
            padding-left: 5em;
        } }

/* // Medium devices (tablets, 768px and up) */
@media (min-width: 768px) and (max-width: 991.98px) { .custom-container{
            margin-top: 2em;
            padding-right: 10em;
            padding-left: 10em;
        } }
        /* // Large devices (desktops, 992px and up) */
@media (min-width: 992px) and (max-width: 1199.98px) { .custom-container{
            margin-top:2em;
            padding-right: 15em;
            padding-left: 15em; }
}
        </style>
</head>
<body style=" background-color: black;">
    <div class="container custom-container">
    <div class="jumbotron" style="border-radius: 5%; background-color:white">
    <center><h3 style="margin-bottom:0%;">Register Company</h3></center><br>
        <div class="container">
            <form method="POST" action="/register_company">
            <div class="form-group">
                  <label for="exampleInputEmail1">Company Name:</label>
                  <input type="text" class="form-control" id="exampleInputName1" name="company_name" aria-describedby="emailHelp" placeholder="Enter Name">                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Company Type:</label>
                  <input type="text" class="form-control" id="exampleInputEmail1" name="company_type" aria-describedby="emailHelp" placeholder="Enter Type ">
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Company Email:</label>
                  <input type="email" class="form-control" id="exampleInputEmail1" name="company_email" aria-describedby="emailHelp" placeholder="Enter Email ">
                </div>
                <div class="form-group">
                  <label for="exampleInputPassword1">Address:</label>
                  <input type="text" class="form-control" id="exampleInputPassword1" name="address" placeholder="Adress">
                </div>                
                <center><button type="submit" class="btn btn-primary">Submit</button></center>
              </form>
              </div>         
      </div>
    </div>
    {{>footer}}