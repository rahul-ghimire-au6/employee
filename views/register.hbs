{{>header}}
<style>
        .custom-container{
            margin-top: 2em;
            padding-right: 25em;
            padding-left: 25em;
            
        }
 /* Extra small devices (portrait phones, less than 576px) */
@media (max-width: 575.98px) { 
    .custom-container{
            margin-top: 2em;
            padding-right: 1em;
            padding-left: 1em;
           
        } 
        }

/* // Small devices (landscape phones, 576px and up) */
@media (min-width: 576px) and (max-width: 767.98px) { .custom-container{
            margin-top: 2em;
            padding-right: 5em;
            padding-left: 5em;
        } }

/* // Medium devices (tablets, 768px and up) */
@media (min-width: 768px) and (max-width: 991.98px) { .custom-container{
            margin-top: 2em;
            padding-right: 10em;
            padding-left: 10em;
        } }
        /* // Large devices (desktops, 992px and up) */
@media (min-width: 992px) and (max-width: 1199.98px) { .custom-container{
            margin-top:2em;
            padding-right: 15em;
            padding-left: 15em; }
}
        </style>
</head>
